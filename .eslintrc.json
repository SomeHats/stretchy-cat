{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": ["flowtype"],
  "extends": ["eslint:recommended", "plugin:flowtype/recommended"],
  "rules": {
    "flowtype/require-valid-file-annotation": ["error", "always"]
  }
}
